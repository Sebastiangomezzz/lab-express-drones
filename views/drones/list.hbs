<h2>Available drones</h2>
<div>
    {{#each dronesList}}
        <div>
            {{this.name}}
            {{this.propellers}}
            {{this.maxSpeed}}
            <br>
            <a href="/drones/{{this.id}}/edit" >
            <button>Edit this drone</button>
            
            <form action='/drones/{{_id}}/delete' method="POST">
            <button type='submit'>Delete</button>
            </form>
        </div>
    {{/each}}
</div>